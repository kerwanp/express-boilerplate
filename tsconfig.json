{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "/node_modules/@types"
    ],
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ],
      "@routers/*": [
        "./src/routers/*"
      ]
    }
  }
}